<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenCVCameraActivity">

            
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <org.opencv.android.JavaCameraView
                    android:id="@+id/openCVCamViewID"
                    android:layout_width="fill_parent"
                    android:layout_height="450dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(y = 2x - 1)Input value:"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/inputNumberID"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/inferButtonID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="inference"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Predicted value:"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/outputNumberID"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

</ScrollView>
        
        

